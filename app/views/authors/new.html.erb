<h2>Create an Author</h2>
<%= form_tag authors_path, method: "post" do %>
  <div class="field">
    <%= label_tag "name", @author.name %>
    <%= text_field_tag "name" %>
  </div>
  <div class="field">
    <%= label_tag "email", @author.email %>
    <%= text_field_tag "email" %>
  </div>
  <%= submit_tag "Create Author" %>
<% end %>
